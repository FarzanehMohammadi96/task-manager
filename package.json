{
  "name": "task-manager",
  "version": "0.1.0",
  "private": true,
  "description": "A  task management application built with Next.js, TypeScript, and Zustand",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
